{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": false,
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": ".build",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "lib": ["ES6", "ES2019", "ES2020"],
        "baseUrl": ".",
        "paths": {
            "/opt/externals/*": ["layers/externals/node_modules/*"],
            "/opt/database/src/*": ["layers/database/src/*"]
        },
        "typeRoots": [
            "./node_modules/@types/",
            "./layers/externals/node_modules/@types/",
            "./opt/layers/externals/node_modules/@types/",
            "layers/externals/node_modules/@types/",
            "/opt/externals/node_modules/@types/",
            "opt/externals/node_modules/@types/",
            "opt/layers/externals/node_modules/@types/"
        ]
    },
    "include": ["."],
    "exclude": [
        // "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        "src/__test__/**/*",
        "src/lib/Types/graphql.ts",
        ".vscode/**/*"
    ]
}
